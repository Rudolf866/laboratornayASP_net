@model laboratornayASP_net.Models.ClientModel
@{
    Layout = "_Layout";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
   
    @if (Model == null)
    {

        // Здесь выводится форма
        <form method="post" asp-action="Register" asp-controller="Home" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="FIO">Введите ФИО</label><br />
                    <div class="col-md-3">
                        <input type="text" asp-for="FIO" placeholder="Ваше ФИО " class="form-control" />
                        <span asp-validation-for="FIO" />
                    </div>

                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Email">Введите email</label><br />
                    <div class="col-md-3">
                        <input type="text" asp-for="Email" placeholder="Ваш email" class="form-control" />
                        <span asp-validation-for="Email" />
                    </div>

                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Phone">Введите телефон</label><br />
                    <div class="col-md-3">
                        <input type="text" asp-for="Phone" placeholder="xxx-xxx-xx-xx" class="form-control" />
                        <span asp-validation-for="Phone" />
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Address">Введите адрес</label><br />
                    <div class="col-md-3">
                        <input type="text" asp-for="Address" placeholder="Ваш адрес" class="form-control" />
                        <span asp-validation-for="Address" />
                    </div>
                </div>
                <br />
                <br />
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Login">Введите Логин</label><br />
                    <div class="col-md-3">
                        <input type="tel" asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" />
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="Password">Введите Пароль</label><br />
                    <div class="col-md-3">
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" />
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <div class="col-md-3">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                </div>
                <div class="text-center">
                    <input class="btn btn-primary" type="submit" value="Регистрация" />
                </div>
            </div>
        </form>


    }

    else
    {
        // Здесь выводятся данные пользователя
        <div class="text-center">
            <h1>Вы успешно зарегистрированы</h1>
        </div>
        // Здесь выводятся данные пользователя

        <table class="table">
            <tr>
                <td>Имя</td>
                <td>Адрес</td>
                <td>Телефон</td>

            </tr>


            <tr>
                <td>@Model.FIO</td>
                <td>@Model.Address</td>
                <td>@Model.Phone</td>

            </tr>

        </table>

        <br>
        <div class="text-center">
            <a class="btn btn-primary" asp-action="Index" role="button">На главную</a>
        </div>

    }

    @section Scripts {
        @{
            /**/

            Html.RenderPartial("_ValidationScriptsPartial");
        }
    }


</body>
</html>
