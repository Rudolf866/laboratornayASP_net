@model List<laboratornayASP_net.Models.ClientModel>

@{
    Layout = "_Layout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Client</title>
</head>
<body>


    <div class="panel panel-primary">
        <div class="panel-heading">
            Учетные записи
        </div>
        <table class="table table-striped" >
            <tr style="color:black;">
                <th>Id</th>
                <th>ФИО</th>
                <th>Email</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Логин</th>
                <th>Пароль</th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr style="color:black;">
                    <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
                </tr>
            }
            else
            {
                foreach (var AppUser in Model)
                {
                <tr style="color:black;">
                    <td>@AppUser.Id</td>
                    <td>@AppUser.FIO</td>
                    <td>@AppUser.Email</td>
                    <td>@AppUser.Address</td>
                    <td>@AppUser.Phone</td>
                    <td>@AppUser.Login</td>
                    <td>@AppUser.Password</td>
                    <td><a class="btn btn-primary" asp-controller="Home" asp-action="DeleteClient" asp-route-id="@AppUser.Id" role="button">Удалить</a></td>
                </tr>
                }
            }
        </table>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Index" role="button">Создать</a>
    </div>


</body>
</html>
